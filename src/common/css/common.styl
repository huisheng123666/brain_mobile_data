.card
  box-sizing border-box
  padding 16px
  width 157px
  border-radius 8px
  background-color #617AF2
  position relative
  &:last-child
    background-color #00A1F2
  &>img
    position absolute
    right 0
    bottom 0
    width 40px
    height 40px
  &>h5
    margin-bottom 8px
    font-size 12px
    color #FFFFFF
  &>p
    font-size 16px
    color #FFFFFF
    font-weight bold
    &>span
      font-size 12px
      font-weight 400


.module-box
  padding 24px 16px
  border-radius 8px
  background-color #fff

.module-title
  margin-bottom 16px
  font-size 16px
  color #334365
  font-weight 500


.watch-video
  background-color #D9E7F5
  border-radius 8px
  display flex
  justify-content center
  align-items center
  position relative
  overflow hidden
  &>img
    width 24px
    height 24px
  &>p
    position absolute
    left 0
    bottom 0
    width 100%
    height 28px
    line-height 28px
    background linear-gradient(180deg, rgba(10,31,51,0) 0%, rgba(10,31,51,0.4) 100%)
    font-size 12px
    color #fff
    text-align center
